<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level - %logger{5}::%X{user}::%X{clazz} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="asterisk" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level - %logger{5} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="org.asteriskjava.manager" level="error"
            additivity="false">
        <appender-ref ref="asterisk" />
    </logger>

<!--    <logger name="org.hibernate.type" additivity="false" >-->
